<div class="container mt-5">
    <h1>Nuevo proyecto</h1>
    <%= form_with(model: @proyecto, local: true) do |f| %>
    <div class="form-group">
        <%= f.label :name  %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :start, 'Fecha inicio' %>
        <%= f.date_field :start, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :end,'Fecha tÃ©rmino' %>
        <%= f.date_field :end, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.select :status, Proyecto.statuses.keys, class:'custom-select' %>
    </div>
